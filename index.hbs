{{!< default}}

{{! The main content area on the homepage }}

    <div class="large-6 medium-6 hide-for-small columns adjust dn-odd-parent"></div>
    <div class="large-6 medium-6 hide-for-small columns adjust dn-even-parent"></div>
    <div class="small-12 columns adjust dn-single-column"></div>
    
    {{#foreach posts}}

    <article class="large-12 medium-12 small-12 columns {{post_class}} hidden {{#if @even}}dn-even{{else}}dn-odd{{/if}} dn-post-entry adjust dn-no-sps" id="post-{{id}}">
        <header class="post-header">
            <div class="large-6 medium-6 small-6 columns no-sp">
                <div class="dn-sep">&#8220;</div>
            </div>
            <div class="large-6 medium-6 small-6 columns no-sp">
                <div class="dn-author">by {{author.name}}</div>
            </div>
            <div class="large-12 medium-12 small-12 columns no-sp dn-date">
                <div class="dn-head-meta dn-date-share"><time datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD / MMM / YYYY"}}</time>
                </div>
            


                 <div class="dn-share">

                    <a class="preview-glyphs step icon-twitter size-12"  href="http://twitter.com/share?text={{encode title}}&url={{url absolute="true"}}"
                        onclick="window.open(this.href, 'twitter-share', );return false;"></a>

                    <a class="preview-glyphs step icon-facebook size-12" href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"
                        onclick="window.open(this.href, 'facebook-share',);return false;"></a>
                                      
                 </div>




                        </div>
        </header>
        <section class="large-12 medium-12 small-12 columns no-sp dn-post-excerpt">
            <h2 class="post-title"><a href="{{url}}" class="dn-post-link">{{{title}}}</a></h2>
            {{content words="40"}}
        </section>
    </article>
    
    {{/foreach}}
